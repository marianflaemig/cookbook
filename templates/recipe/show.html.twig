{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

    {% block body %}

        <div class="max-w-4xl mx-auto p-4 space-y-8">
            <h1 class="text-3xl font-extrabold text-gray-900 text-center mb-6">Your Cookbook</h1>

            <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
                <h2 class="font-bold text-center text-2xl mb-4 text-[#9b59b6]">
                    {{ recipe.title }}
                </h2>

                {# Recipe Metadata (Prep/Cook Time) #}
                <div class="flex justify-center space-x-6 text-sm text-gray-500 mb-6">
                    {% if recipe.prepTime %}
                        <span>Prep: <span class="font-semibold text-gray-700">{{ recipe.prepTime }} min</span></span>
                    {% endif %}
                    {% if recipe.cookTime %}
                        <span>Cook: <span class="font-semibold text-gray-700">{{ recipe.cookTime }} min</span></span>
                    {% endif %}
                </div>

                <div class="flex flex-col md:flex-row gap-6 align-top">

                    {# Recipe Image #}
                    <div class="flex-shrink-0">
                        {% if recipe.image %}
                            <img class="size-80 object-cover rounded-lg shadow-md"
                                 src="/images/recipes/{{ asset(recipe.image) }}"
                                 alt="{{ recipe.title }}">
                        {% else %}
                            {# Fallback image for safety #}
                            <img class="size-80 object-cover rounded-lg shadow-md bg-gray-200 p-8"
                                 src="{{ asset('/images/recipes/spatula-4469991_1280.jpg') }}"
                                 alt="No image available">
                        {% endif %}
                    </div>

                    {# Ingredients Table #}
                    <div class="w-full md:w-2/3">
                        <h3 class="text-lg font-semibold text-gray-800 mb-3">Ingredients</h3>
                        <table class="w-full border-collapse border border-gray-300 rounded-lg overflow-hidden">
                            <thead class="bg-indigo-50">
                            <tr>
                                <th class="p-3 text-left text-sm font-medium text-gray-600 border-r border-gray-300">
                                    Ingredient
                                </th>
                                <th class="p-3 text-left text-sm font-medium text-gray-600 border-r border-gray-300">
                                    Amount
                                </th>
                                <th class="p-3 text-left text-sm font-medium text-gray-600">
                                    Unit
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entry in recipe.recipeIngredients %}
                                <tr class="odd:bg-white even:bg-gray-50">
                                    {# FIXED PATH: using entry.ingredient.name #}
                                    <td class="p-3 border-r border-gray-300">
                                        {{ entry.ingredient.name }}
                                    </td>
                                    <td class="p-3 border-r border-gray-300 font-mono">
                                        {{ entry.quantity }}
                                    </td>
                                    <td class="p-3">
                                        {{ entry.unit }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {# Description / Instructions #}
                <div class="mt-6 pt-4 border-t border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-800 mb-3">Instructions</h3>
                    <div class="text-gray-600 whitespace-pre-wrap leading-relaxed">
                        {{ recipe.description }}
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="p-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
                    <a href="{{ path('edit_recipe', {'id': recipe.id}) }}"
                       class="px-3 py-2 text-sm font-medium text-white bg-[#9b59b6] hover:bg-[#834ea2] rounded-md">
                        Edit
                    </a>

                    <!-- Secure Delete Form (FIXED) -->
                    {% if deleteForm is defined %}

                        {# Use form_start to correctly render action URL and POST method #}
                        {{ form_start(deleteForm, {
                            'attr': {
                                'class': 'inline-block',
                                'onsubmit': "return confirm('Are you sure you want to delete this recipe?');"
                            }
                        }) }}

                        {# form_widget renders the hidden _method and _token fields #}
                        {{ form_widget(deleteForm) }}

                        <button type="submit"
                                class="px-3 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700">
                            Delete
                        </button>

                        {# Use render_rest: false to prevent extra <div> wrapper #}
                        {{ form_end(deleteForm, {render_rest: false}) }}
                    {% endif %}
                </div>
            </div>
        </div>
    {% endblock %}
