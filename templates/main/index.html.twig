{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}


{% block body %}

    {#
    Index (Home) Page Template for the Cookbook theme.
    Features a Hero Banner, Featured Recipes, and a Call-to-Action.
    #}

    {# --- 1. Hero Banner --- #}
    <div class="bg-gray-50 pt-16 pb-20 sm:pt-24 sm:pb-28">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 items-center gap-12">

                {# Hero Text Content #}
                <div>
                    <h1 class="text-5xl font-extrabold tracking-tight text-[#1a1a1a] sm:text-6xl mb-4">
                        Cooking Comfort, <span class="text-[#9b59b6]">Made Simple.</span>
                    </h1>
                    <p class="mt-3 text-xl text-gray-600 sm:mt-5 sm:max-w-xl">
                        Discover classic recipes passed down through generations. Easy instructions, simple ingredients,
                        and guaranteed delicious results—the heart of home cooking is right here.
                    </p>
                    <div class="mt-10 sm:flex sm:justify-start">
                        <div class="rounded-full shadow-md">
                            <a href="{{ path('show_recipes') }}"
                               class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full text-white bg-[#9b59b6] hover:bg-[#834ea2] transition duration-150 md:py-4 md:text-lg md:px-10">
                                Explore All Recipes
                            </a>
                        </div>
                    </div>
                </div>

                {# Hero Image (Conceptual) #}
                <div class="mt-10 md:mt-0">
                    <div class="h-96 w-full rounded-xl overflow-hidden shadow-2xl">
                        <img src="{{ asset('images/Gemini_Generated_Image_je1v74je1v74je1v.png') }}" alt="">
                    </div>
                </div>

            </div>
        </div>
    </div>

    {# --- 2. Featured Recipes Section --- #}
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-[#333333] mb-8 text-center">
            Today's Featured Classics
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

            {# Featured Recipe Card 1: Potato Salad #}
            {% include '/main/recipe_card.html.twig' with {
                id: 1,
                title: 'Potato Salad with Vinegar and Oil - A Classic',
                prep: '30 min',
                cook: '25 min',
                route: 'show_recipe',
                image_url: ''
            } %}

            {# Featured Recipe Card 2: Simple Beef Stew #}
            {% include '/main/recipe_card.html.twig' with {
                id: 2,
                title: 'Hearty Beef Stew',
                prep: '20 min',
                cook: '2 hours',
                route: 'show_recipe'
            } %}

            {# Featured Recipe Card 3: Apple Pie #}
            {% include '/main/recipe_card.html.twig' with {
                id: 3,
                title: 'Grandma’s Best Apple Pie',
                prep: '45 min',
                cook: '1 hour',
                route: 'show_recipe'
            } %}

        </div>

        <div class="text-center mt-12">
            <a href="{{ path('show_categories') }}"
               class="text-lg font-medium text-[#9b59b6] hover:text-[#834ea2] border-b-2 border-transparent hover:border-[#9b59b6] pb-1 transition duration-150">
                Browse all categories &rarr;
            </a>
        </div>

    </div>

    {# --- 3. Tips & Techniques CTA --- #}
    <div class="bg-white border-t border-b border-gray-100 py-16">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-extrabold text-[#333333] mb-4">
                New to the Kitchen? We've Got You.
            </h2>
            <p class="text-lg text-gray-600 mb-6">
                Stop making common mistakes! Check out our collection of essential techniques and culinary tips to level
                up your cooking today.
            </p>
            <a href="{{ path('show_tips') }}"
               class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-[#333333] hover:bg-[#1a1a1a] transition duration-150">
                View Kitchen Tips & Tricks
            </a>
        </div>
    </div>
{% endblock %}


